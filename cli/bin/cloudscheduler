#       'ca_cert': '%s/lets-encrypt-x3-cross-signed.pem.txt' % os.path.dirname(os.path.abspath(args[0])),

    # Initialize global variables.
    gvar = {
        'action': None,
        'actions': {
            'cloud': [
                False, # super_user?
