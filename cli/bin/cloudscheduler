            ('-cr',   '--cloud-region', True),
            ('-CSV',  '--comma-separated-values', True),
            ('-CSEP', '--comma-separated-values-separator', True),
            ('-csp',  '--cloud-spot-price', True),
            ('-ct',   '--cloud-type', True),
            ('-cU',   '--cloud-user-domain', True),
            ('-cu',   '--cloud-user', True),
            ('-dci',  '--delete_cycle_interval', True),
