            ('-g',    '--group', True),
            ('-gm',   '--group-manager', True),
            ('-gme',  '--group-metadata-exclusion', True),
            ('-gmo',  '--group-metadata-option', True),
            ('-gn',   '--group-name', True),
            ('-go',   '--group-option', True),
            ('-H',    '--long-help', False),
            ('-h',    '--help', False),
            ('-htcf', '--htcondor-fqdn', True),
            ('-htcn', '--htcondor-name', True),
            ('-htcu', '--htcondor-users', True),
